<div class="mx-auto md:w-2/3 w-full flex">
  <div class="mx-auto">

    <%= render @room %>

    <%= link_to '編集', edit_room_path(@room), class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" if admin_signed_in? %>
    <div class="inline-block ml-2">
      <%= button_to '削除', room_path(@room), method: :delete, class: "mt-2 rounded-lg py-3 px-5 bg-gray-100 font-medium" if admin_signed_in? %>
    </div>
    <%= link_to '戻る', rooms_path, class: "ml-2 rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
  </div>
</div>
